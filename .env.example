# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (PostgreSQL RDS)
POSTGRES_DATABASE_URL=postgresql://username:password@host:5432/database
POSTGRES_DATABASE_URL_RO=postgresql://username:password@host:5432/database
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000

# LLM Configuration (Ollama on EC2) - matching jira-feature-documentor pattern
# Use LLM_BASE_URL and LLM_MODEL (recommended) or OLLAMA_BASE_URL and OLLAMA_MODEL (legacy)
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1:8b-instruct
# Legacy Ollama env vars (for backward compatibility)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct
OLLAMA_TIMEOUT=30000

# OpenAI Configuration (optional - for cloud LLM)
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0

# Anthropic Configuration (optional - for cloud LLM)
ANTHROPIC_API_KEY=
ANTHROPIC_API_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Web Search APIs
BRAVE_SEARCH_API_KEY=
BRAVE_SEARCH_API_URL=https://api.search.brave.com/res/v1/web/search
BRAVE_SEARCH_TIMEOUT=10000

SERP_API_KEY=
SERP_API_URL=https://serpapi.com/search.json
SERP_API_TIMEOUT=10000

GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
GOOGLE_SEARCH_API_URL=https://www.googleapis.com/customsearch/v1
GOOGLE_SEARCH_TIMEOUT=10000

# Self-Hosted Web Search (SearxNG)
SEARXNG_URL=
SEARXNG_TIMEOUT=10000

# Vector Database (Optional - for RAG)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=
PINECONE_API_URL=https://api.pinecone.io

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# CORS Configuration
CORS_ORIGIN=*

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# VPC Configuration (for Lambda - only needed if accessing EC2 Ollama or RDS requires VPC)
# LAMBDA_SECURITY_GROUP_ID=
# LAMBDA_SUBNET_ID_1=
# LAMBDA_SUBNET_ID_2=
